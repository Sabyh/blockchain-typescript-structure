{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "blockchain-interfaces": ["./packages/blockchain-interfaces/src"],
      "blockchain-implementations": ["./packages/blockchain-implementations/src"],
      "api": ["./packages/api/src"]
    }
  },
  "include": ["packages/**/*", "apps/**/*"]
}
