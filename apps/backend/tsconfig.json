{
  "compilerOptions": {
    "target": "es2021",  // Set target to ES2021
    "module": "commonjs",
    "lib": ["es2021"],   // Include ES2021 library
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
